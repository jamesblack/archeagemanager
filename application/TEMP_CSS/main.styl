.professionSheet

  table

    th
      height 140px
      white-space nowrap

      &.rotate > div
        transform translate(34px, 0) rotate(315deg)
        width 30px

        & > span
          border-bottom 1px solid #cccccc
          padding 5px 10px
    td
      min-width 50px
      text-align center
      border 1px solid #ccc

      &.preferred
        position relative
        z-index 0
        overflow hidden

        &::after
          position absolute
          right -10px
          top -10px
          z-index 1
          width 15px
          height 15px
          content ' '
          transform rotate(45deg)
          width 20px
          display block
          background #79A70A
          background linear-gradient(#9BC90D 0%, #79A70A 100%)
          box-shadow 0 3px 6px -5px rgba(0,0,0,1)

